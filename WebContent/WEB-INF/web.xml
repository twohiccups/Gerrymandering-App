<?xml version="1.0" encoding="UTF-8"?>
<web-app  version="3.0" 
          xmlns="http://java.sun.com/xml/ns/javaee" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" >
   
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>calculate</servlet-name>
        <servlet-class>servlets.MapServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>calculate</servlet-name>
        <url-pattern>/calculate</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>servlets.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>servlets.RegisterServlet</servlet-class>
    </servlet>   
    
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>save</servlet-name>
        <servlet-class>servlets.SaveMapServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>save</servlet-name>
        <url-pattern>/save</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>load</servlet-name>
        <servlet-class>servlets.LoadMapServlet</servlet-class>
    </servlet> 
    
    <servlet-mapping>
        <servlet-name>load</servlet-name>
        <url-pattern>/load</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>getfiles</servlet-name>
        <servlet-class>servlets.GetFilesServlet</servlet-class>
    </servlet> 
    
    <servlet-mapping>
        <servlet-name>getfiles</servlet-name>
        <url-pattern>/getfiles</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>servlets.DeleteServlet</servlet-class>
    </servlet> 
    
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    
    
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    
    
    
    
